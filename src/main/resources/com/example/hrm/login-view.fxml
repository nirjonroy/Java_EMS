<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hrm.controller.LoginController" spacing="10" alignment="CENTER" prefWidth="300" prefHeight="200">
    <Label text="Login to HRM System" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" />
    <Label fx:id="errorLabel" textFill="red" visible="false" />
</VBox>
