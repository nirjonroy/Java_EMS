<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="507.0" prefWidth="588.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ems.controller.EmployeeController">
    <children>
        <TableView fx:id="employeeTable" prefHeight="330.0" prefWidth="588.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="emailColumn" text="Email" />
                <TableColumn fx:id="salaryColumn" text="Salary" />
                <TableColumn fx:id="joiningDateColumn" text="Joining Date" />
            </columns>
        </TableView>
        <TextField fx:id="nameField" layoutX="18.0" layoutY="339.0" promptText="Name" />
        <TextField fx:id="emailField" layoutX="209.0" layoutY="339.0" promptText="Email" />
        <TextField fx:id="salaryField" layoutX="18.0" layoutY="377.0" promptText="Salary" />
        <DatePicker fx:id="joiningDatePicker" layoutX="209.0" layoutY="377.0" />
        <Button layoutX="28.0" layoutY="455.0" onAction="#addEmployee" text="Add" />
        <Button layoutX="104.0" layoutY="455.0" onAction="#updateEmployee" text="Update" />
        <Button layoutX="191.0" layoutY="449.0" onAction="#deleteEmployee" text="Delete" />

        

    </children>
</AnchorPane>
