<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ems.controller.LoginController">
    <children>
        <Label layoutX="220" layoutY="50" text="Login" style="-fx-font-size: 20px;"/>
        <Label layoutX="150" layoutY="120" text="Username:"/>
        <TextField fx:id="usernameField" layoutX="250" layoutY="120" prefWidth="200"/>
        <Label layoutX="150" layoutY="170" text="Password:"/>
        <PasswordField fx:id="passwordField" layoutX="250" layoutY="170" prefWidth="200"/>
        <Button text="Login" layoutX="250" layoutY="220" onAction="#handleLogin"/>
    </children>
</AnchorPane>
